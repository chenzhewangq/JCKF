body{
  font-family: 微软雅黑;
  background:#26354c;
}
  #logo>h1,#logo>h2{
    text-align:center;
    font-weight:bold;
    color:#fff;
  }
  #login{
    background:#8b96a5;
    width:440px;
    margin:30px auto 20px;
    padding:20px 50px;
    text-align:center;
    -webkit-box-shadow: 0px 3px 2px #888888;
    -ms-box-shadow: 0px 3px 2px #888888;
    box-shadow: 0px 3px 2px #888888;
  }
  #login>div{
    border-radius:3px;
    margin-bottom:20px;
    position:relative;
  }
  #login>div>input{
    /*width:90%;*/
    height:45px;
    font-size:22px;
    padding-left: 45px;
  }
  #login>div>img{
    position:absolute;
    left:10px;
    top:5px;
  }
  #login button{
    color: white;
    background: #8b96a5;
    font-size:22px;
    /*width: 90%;*/
    height: 50px;
    border: 1px solid black;
    border-radius: 10px;
  }