/*背景色:#26354c*/
* {
  margin: 0;
  padding: 0;
  display: absolute
}
html {
  height: 100%;
  /*width: 100%;*/
}
body {
  font-family: '微软雅黑';
  font-size: 14px;
  height: 100%;
  /*width: 100%;*/
  background-color: #26354c;
  color: #a2d3f9;
}
a {
  color: #a2d3f9;
}
a:hover {
  text-decoration: none;
}
.percent {
  width: 100%;
  background: -webkit-gradient(linear, center top, center bottom, from(#1B2A43), to(#26354C));
}
.clearfix:after {
  content: '';
  display: block;
  clear: both;
}
/*header 开始*/
.headerself {
  display: block;
  z-index: 999;
  opacity: 0.95;
  margin: 0 auto;
  /*width: 100%;*/
  width: 1490px;
  height: 100px;
  
  border-bottom: 1px solid #ccc;
  background: -webkit-gradient(linear, center top, center bottom, from(#1B2A43), to(#26354C));

}
.headerself {
  /*position: relative;*/
  z-index: -1;
  /*opacity: 0.7;*/
}
.header_img {
  display: block;
  float: left;

  margin-top: -2px;
  margin-left: 80px;
  z-index: 999;
}
.header_nav {
  float: left;
  display: block;
  line-height: 100px;

  color: #000;
  margin-left: 15%;
  height: 100px;
}
.headerself a {
  color: #a8aeb7;
  font-size: 20px;
}
.headerself .header_nav a {
  padding-bottom: 20px;
}
.header_nav li {
  float: left;
  display: block;
  line-height: 100px;
  color: #000;
  padding: 0 20px;
  /*margin: 0 10px;*/
}
.header_sign_in li,
.header_nav li {
  list-style: none;
  margin: 0 10px;
}
.header_btn{
  border: 1px solid transparent;
  padding: 5px;
}
.header_btn:link {
  text-decoration: none;
} 

.header_btn:hover {
  color: #ffcb80;
  border-bottom: 3px solid #cc5e39;
} 
.header-btn-sign{
  border: 1px solid transparent;
  padding: 5px;
}
.header-btn-sign:link {
  text-decoration: none;
}
.header-btn-sign:hover {
  color: #ffcb80;
  border: 1px solid #ccc;
  border-radius: 10px;
} 
.header_sign_in {
  margin-right: 20px;
}
.header_sign_in li {
  float: right;

  line-height: 100px;
  list-style: none;

  color: #333;

  margin: 0 5px;
}

/*header 结束*/
.pro_main {
  /*position: absolute;*/
  padding: 0 50px;
  /*width: 100%;*/
  height: 100%;
  /*border-right: 1px solid #ccc;*/
}
.pro_content {
  float:left;
  padding: 0 30px;
  height: 100%;
  /*width: 100%;*/
  /*border-right: 1px solid #ccc;*/
}
.pro_content_nav {
  padding:20px 0;
}
.pro_content_nav button{
  margin-right: 10px;
}
.tab_content_btn {
  position: relative;
  top: -55px;
  /*right: 100px;*/
}
#foward {
  position: absolute;
  top: 50%;
  left: 100%;
}